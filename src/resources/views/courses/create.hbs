<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
      <form method='post' action='{{#if course}} /courses/{{course._id}}/edit?_method=PUT  {{else}} /courses/store {{/if}}'>
        <div class='form-group'>
          <label for='nameCourse'>Name Course</label>
          <input
            type='text'
            class='form-control'
            id='nameCourse'
            aria-describedby='emailHelp'
            placeholder='Enter name'
            name='name'
            value="{{#if course}} {{course.name}}  {{/if}}"
          />
        </div>
        <div class='form-group'>
          <label for='descriptionCourse'>Description</label>
          <input
            type='text'
            class='form-control'
            id='descriptionCourse'
            placeholder='Description'
            name='description'
            value="{{#if course}} {{course.description}}  {{/if}}"
          />
        </div>
        <div class='form-group'>
          <label for='courseImage'>ImageUrl</label>
          <input
            type='text'
            class='form-control'
            id='courseImage'
            placeholder='Image'
            name='image'
            value="{{#if course}} {{course.image}}  {{/if}}"
          />
        </div>
        <div class='form-group'>
          <label for='videoId'>VideoId</label>
          <input
            type='text'
            class='form-control'
            id='videoId'
            placeholder='VideoId'
            name='videoID'
            value="{{#if course}} {{course.videoID}} {{/if}}"
          />
        </div>
        <button type='submit' class='btn btn-primary'>{{#if course}} Update {{else}} Create {{/if}}</button>
      </form>
    </div>
  </div>
</div>